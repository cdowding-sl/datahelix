{
  "schemaVersion": "0.8",
  "fields": [
    {
      "name": "forename",
      "type": "string",
      "nullable": false
    },
    {
      "name": "surname",
      "type": "string",
      "nullable": false
    }
  ],
  "rules": [
    {
      "constraints": [
        {
          "anyOf": [
            {
              "equalTo":
              {
                "field": "forename",
                "value": "Matt"
              }
            },
            {
              "equalTo":
              {
                "field": "forename",
                "value": "Ryan"
              }
            }
          ]
        },
        {
          "condition": {
            "if": {
              "equalTo": {
                "field": "forename",
                "value": "Matt"
              }
            },
            "then": {
              "equalTo": {
                "field": "surname",
                "value": "Damon"
              }
            },
            "else": {
              "inSet": {
                "field": "surname",
                "values": [
                  "Reynolds",
                  "Gosling"
                ]
              }
            }
          }
        }
      ]
    }
  ]
}